@page "{id:guid}"
@model Quizzle.Pages.Questions.EditModel
@{
    ViewData["Title"] = "Edit Question";
}

<div>
    <h1 class="display-4">Edit Question</h1>
    <form method="post">
        <div class="form-group">
            <input type="hidden" name="Question.Id" value="@Model.Question.Id" />
        <div class="form-group">
            <label for="questionText">Question Text</label>
            <input type="text" id="questionText" name="Question.QuestionText" class="form-control" value="@Model.Question.QuestionText" required />
        </div>
        <div class="form-group">
            <label for="optionA">Option A</label>
            <input type="text" id="optionA" name="Question.OptionA" class="form-control" value="@Model.Question.OptionA" required />
        </div>
        <div class="form-group">
            <label for="optionB">Option B</label>
            <input type="text" id="optionB" name="Question.OptionB" class="form-control" value="@Model.Question.OptionB" required />
        </div>
        <div class="form-group">
            <label for="optionC">Option C</label>
            <input type="text" id="optionC" name="Question.OptionC" class="form-control" value="@Model.Question.OptionC" required />
        </div>
        <div class="form-group">
            <label for="optionD">Option D</label>
            <input type="text" id="optionD" name="Question.OptionD" class="form-control" value="@Model.Question.OptionD" required />
        </div>
        <div class="form-group">
            <label for="answer">Answer (A/B/C/D)</label>
            <input type="text" id="answer" name="Question.Answer" class="form-control" value="@Model.Question.Answer" required />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" onclick="window.history.back()">Cancel</button>
    </form>
</div>
